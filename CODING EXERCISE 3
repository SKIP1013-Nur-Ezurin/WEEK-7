package exerciseLooping;

public class Exercise2 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int k = 20;
		int j = 20;
		int l;
		
		//decrement
		
		//while
		while (k > 10) {
	        System.out.println("k = " +k);
	          k--; 
	    }
		
		//do-while
		do {
			System.out.println("j + " +j);
			j--;
		}
		while (j>10);
		
		//for
		for (l=2; l>10;l--) {
			System.out.println(" l = " +l);
		}

	}

}
