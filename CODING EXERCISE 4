package exerciseLooping;

public class Exercise1 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int i = 1;
		int j = 1;
		int k ;
		
		//while
		while (i<5) {
		      System.out.println("i = "+i);
		      i=i+1;   
		} 
		
		//do-while
		do {
			System.out.println("j = " +j);
		      j = j + 1;
		} while (j<5);
		
		//for
		for ( k=1; k<5 ; k=k+1) {
			System.out.println("k = " +k);
		}

	}

}
